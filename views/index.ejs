            font-weight: 700;
            font-style: italic; */
            font: 900 60px asap, arial;
            color: #0186da;
            letter-spacing: 0px;
            text-shadow: 0 2px 2px #ddd;
            word-wrap: break-word;
        }

        .title {
            /* text-decoration: underline; */
            /* font-size: 48px;
            font-family: 'Times New Roman', Times, serif;
            font-weight: 200; */
            font: bold 36px asap, arial;
            color: #505050;
            letter-spacing: -1px;
        }

        .short-url {}

        marquee {
            font-size: 30px;
            margin-bottom: 20px;
        }

        input[type='url'] {
            /* background-color: #c4cbee; */
            /* display: block;
            padding: 20px 60px;
            font-size: 50px;
            color: white;
            border: solid 2px black;
            border-radius: 30px;
            font-family: 'Nunito', sans-serif; */
            margin: 10px 10px;
            display: table-cell;
            width: 100%;
            height: 56px;
            padding: 10px 16px;
            margin-left: 0.5px;
            font: 30px lato, arial;
            color: #000;
            background: #fff;
            border: 1px solid black;
            border-radius: 3px;
            box-sizing: border-box;
        }

        input {
            writing-mode: horizontal-tb !important;

        }

        p.error {
            font: 30px lato, arial;
            font-family: 'Nunito', sans-serif;
            color: white;
            background: #2c87c5;
            padding: 20px;
            padding-top: -50px;
            border-radius: 50px;
        }

        input[type='submit'] {
            /* display: block;
            margin: 15px auto;
            background-color: #3f51b5;
            color: white;
            padding: 20px 35px;
            font-size: 30px;
            color: white;
            font-family: 'Nunito', sans-serif; */
            height: 56px;
            padding: 10px 16px;
            font: bold 20px lato, arial;
            color: #fff;
            background-color: #2c87c5;
            text-align: center;
            vertical-align: middle;
            cursor: pointer;
            white-space: nowrap;
            border: 0px;
            border-radius: 50px;
            /* border: 0;
            border-radius: 3px; */
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            /* margin-left: -1px; */
            -webkit-appearance: button;
            margin: 8px;
        }

        .box {
            /* border: solid 10px black;
            background-color: white;
            margin-left: 280px;
            margin-right: 280px;
            padding: 15px; */
            margin: 0 auto 20px auto;
            max-width: 758px;
            box-shadow: 0 1px 4px #ccc;
            border-radius: 4 px;
            padding: 10px 40px 5px;
            background: #fff;
            text-align: center;
        }
    </style>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
</head>

<body>

    <center>
        <h1 class="head">
            URL Shortner
        </h1>
    </center>

    <% if(locals.error){ %>
        <lottie-player src="https://assets5.lottiefiles.com/packages/lf20_4owMZE.json" mode="bounce"
            background="transparent" speed="1" style="width: 300px; height: 120px;" hover loop autoplay>
        </lottie-player>

        <% }else{%>
            <marquee behavior="smooth" direction="right">Limited Time Free URL Shortner Service</marquee>
            <% } %>

                <center>
                    <div class="box">
                        <b>
                            <h1 class="title">Paste the URL to be Shortened</h1>
                        </b>
                        <form action="/" method="post">
                            <b><i>
                                    <input type="url" name="url" id="url" placeholder="Enter URL Here...">
                                    <input type="submit" value="Short Your URL">
                            </b></i>
                        </form>
                        <div class="short-url">
                            <% if(locals.short_url){ %>
                                <h1>
                                    <a href="<%= short_url %>">
                                        <%= short_url %>
                                    </a>
                                </h1>
                                <% } %>
                        </div>
                    </div>
                </center>

                <% if(locals.error){ %>
                    <p class="error">
                        <%= error %>
                    </p>
                    <% }else{%>
                        <% } %>

</body>

</html>